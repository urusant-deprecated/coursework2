	\renewcommand{\sectionmark}[1]{\markboth{%
		{\thesection\hspace{1em}#1}}% левая пометка
		{}% правая пометка (она пуста)
	}
	\newcounter{lections} 		% создадим новый счетчик, например для лекций
	\setcounter{lections}{0}	% пока лекций не было
	\newcommand{ \lection}[1]{	% опишем команду --- начало <<лекции>>
		\addtocounter{lections}{1}  
		\textbf{ 
			\textcolor{red}{Лекция \arabic{lections}} : 
		} \textcolor{blue} {#1} 
	}

